<% let title = 'Admin Login' %>
<% include partials/header %>

<body>
  <div class="container">
    <% include partials/navbar %>
    <br>
    <form name="member-login" method="POST" action="/auth/login">
      <h5>Admin Login</h5>
      <% if (message) {%>
      <article class="message"> <%= message %></article>
      <%}%>
      <div class="form-group">
        <label for="member-id">Firstname:</label>
        <input type="text" required name="firstname" title="Enter your name" class="form-control"
          placeholder="Enter your Name">
      </div>
        <div class="form-group">
          <label for="member-id">Username:</label>
          <input type="text" required name="username" title="Be sure to enter correct username" class="form-control" placeholder="Enter your Username">
        </div>
        <div class="form-group">
          <label for="surname">Password:</label>
          <input name="password" title="Be sure to enter correct password" required type="password" class="form-control">
        </div>
        <button name="login" type="submit" class="btn">Login &nbsp; <i class="fa fa-sign-in"></i></button>
      </form>
  </div>
  <script src=""></script>
</body>

</html>