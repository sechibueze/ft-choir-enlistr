<% let title = 'Admin Dashboard' %>
<% include partials/header %>

<body>
  <div class="container-fluid">
    <div class="content">
      <a href="/auth">Back</a>
    </div>

    <div class="container-fluid">
      <h5> Welcome <%= admin.firstname %></h5>
      <% if (message) {%>
      <article class="message"> <%= message %></article>
      <%}%>
            <table>
              <thead>
                <tr>
                  <th>S/N</th>
                  <th>Choir_ID</th>
                  <th>Surname</th>
                  <th>Firstname</th>
                  <th>Middlename</th>
                  <th>Phone</th>
                  <th> OTP</th>
                  <th>Part</th>
                  <th>Group</th>
                  <th>Availability</th>
                  <th>Accomodation</th>
                  <th>Gender</th>
                  <th>Entry Date</th>
                 <td>Delete</td>
                </tr>
              </thead>
              <tbody>
                <% if (data.length > 0) {
                  let count = 0;
                  data.forEach(member => {
                        
                %>
      <tr>
        <td><%= ++count %></td>
        <td><%= member.choir_id %></td>
        <td><%= member.surname %></td>
        <td><%= member.firstname %></td>
        <td><%= member.middlename %></td>
        <td><%= member.phone %></td>
        <td><%= member.otp %></td>
        <td><%= member.part %></td>
        <td><%= member.team %></td>
        <td><%= member.availability %></td>
        <td><%= member.accomodation %></td>
        <td><%= member.gender %></td>
        <td><%= new Date(member.entry_date).toLocaleString() %></td>
        <td><a href="/auth/delete/<%= member.choir_id %>">Delete</a></td>

      </tr>

      <% 
                      })} else {
                    %>
      <h1> No List yet </h1>
      <% }%>


      </tbody>
      </table>



    </div>



  </div>
  <script src="/js/admin-dashboard.js"></script>
</body>

</html>