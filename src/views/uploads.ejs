<% let title = 'Admin Dashboard' %>
<% include partials/header %>

<body>
  <div class="container">
    <div class="content">
      <span class="dash-hamburger"><i class="fa fa-bars"></i></span>
      <div class="dash-container">
        <div class="sidebar">
          <span class="close">X</span>

          <div class="row user">
            <h2 class="title"> Enlistr</h2>

          </div>
          <% include partials/sidebar %>
        </div>
        <div class="main">
          <h5> Welcome <%= admin.firstname %></h5>
          <br>


          <form name="member-login" method="POST" action="/auth/uploads" enctype="multipart/form-data">
            <% if (message) {%>
            <article class="message"> <%= message %></article>
            <%}%>
                <div class="form-group">
                  <label for="member-id">Select File:</label>
                  <input type="file" required name="list"  class="form-control"
                    >
                </div>
                  <div class="form-group">
                    <label for="member-id">Username:</label>
                    <input type="text" required name="username" title="Be sure to enter correct username" class="form-control" placeholder="Enter your Username">
                  </div>
                  <div class="form-group">
                    <label for="surname">Password:</label>
                    <input name="password" title="Be sure to enter correct password" required type="password" class="form-control">
                  </div>
                  <button name="login" type="submit" class="btn">Upload &nbsp; <i class="fa fa-sign-in"></i></button>
                </form>


        </div>
      </div>
    </div>

  </div>
  <script src="/js/admin-dashboard.js"></script>
</body>

</html>